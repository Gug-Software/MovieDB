<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="movie"
                type="gug.co.com.testmovies.data.domain.Movie"/>

        <variable
                name="listener"
                type="gug.co.com.testmovies.ui.movies.adapter.MovieItemListener">

        </variable>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemMovie_layout"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                tools:text="Titulo de pelicula"
                android:text="@{movie.originalTitle}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/title_text"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="@+id/cardView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="4dp"
                android:id="@+id/average_card"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                app:layout_constraintEnd_toEndOf="@+id/cardView">

            <LinearLayout
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{movie.average}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:onClick="@{() -> listener.onClick(movie)}"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                app:layout_constraintDimensionRatio="V, 2:3"
                app:cardCornerRadius="8dp"
                android:id="@+id/cardView">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="180dp"
                    style="@style/mm">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:srcCompat="@tools:sample/backgrounds/scenic"
                        android:id="@+id/movie_image"
                        android:scaleType="fitXY"
                        imageUrl="@{movie.definitivePosterPath}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>