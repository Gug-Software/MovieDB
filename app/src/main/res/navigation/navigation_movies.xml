<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation_movies"
            app:startDestination="@id/moviesPopular">

    <fragment
            android:id="@+id/moviesPopular"
            android:name="gug.co.com.testmovies.ui.movies.MoviesFragment"
            android:label="@string/menu_bottom_popular"
            tools:layout="@layout/fragment_movies">

        <argument
                android:name="filter"
                app:argType="gug.co.com.testmovies.utils.movies.MoviesFilter"
                android:defaultValue="POPULAR"/>

        <argument
                android:name="isGlobal"
                app:argType="boolean"
                android:defaultValue="false"/>

    </fragment>

    <fragment
            android:id="@+id/moviesTopRated"
            android:name="gug.co.com.testmovies.ui.movies.MoviesFragment"
            android:label="@string/menu_bottom_topRated"
            tools:layout="@layout/fragment_movies">

        <argument
                android:name="filter"
                app:argType="gug.co.com.testmovies.utils.movies.MoviesFilter"
                android:defaultValue="TOP_RATED"/>

        <argument
                android:name="isGlobal"
                app:argType="boolean"
                android:defaultValue="false"/>

    </fragment>

    <fragment
            android:id="@+id/moviesUpComing"
            android:name="gug.co.com.testmovies.ui.movies.MoviesFragment"
            android:label="@string/menu_bottom_upComing"
            tools:layout="@layout/fragment_movies">

        <argument
                android:name="filter"
                app:argType="gug.co.com.testmovies.utils.movies.MoviesFilter"
                android:defaultValue="UP_COMING"/>

        <argument
                android:name="isGlobal"
                app:argType="boolean"
                android:defaultValue="false"/>

    </fragment>

    <fragment
            android:id="@+id/moviesGlobalSearch"
            android:name="gug.co.com.testmovies.ui.movies.MoviesFragment"
            tools:layout="@layout/fragment_movies"
            android:label="@string/menu_search">

        <argument
                android:name="filter"
                app:argType="gug.co.com.testmovies.utils.movies.MoviesFilter"
                android:defaultValue="GLOBAL"/>

        <argument
                android:name="isGlobal"
                app:argType="boolean"
                android:defaultValue="true"/>

    </fragment>


    <fragment
            android:id="@+id/movieDetailFragment"
            android:name="gug.co.com.testmovies.ui.detail.MovieDetailFragment"
            android:label="@string/title_movieDetail"
            tools:layout="@layout/fragment_movie_detail">
        <argument
                android:name="movieId"
                app:argType="integer"/>
        <argument
                android:name="filter"
                app:argType="gug.co.com.testmovies.utils.movies.MoviesFilter"
                />
    </fragment>


    <action
            android:id="@+id/action_global_movieDetail"
            app:destination="@id/movieDetailFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>

</navigation>